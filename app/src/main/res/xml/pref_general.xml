<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_foodTabs"
        android:entryValues="@array/pref_foodTabs_values"
        android:key="default_tab"
        android:summary="%s"
        android:title="Default tab" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="use_dark_theme"
        android:summary="Use dark theme"
        android:title="Dark theme" />

</PreferenceScreen>
